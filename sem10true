#include <stdio.h>
#include <stdlib.h>
#include <string.h>
struct nlist {
    struct nlist* next;
    char* town;
    int people;
};
#define HASHSIZE 15

struct nlist* lookup(char* s);
static struct nlist *hashtab[HASHSIZE];
struct nlist* install(char* name, int value);
int delete(char* name);
unsigned hash(char* s);
void plist();
int main()
{
    int f = -1;
    char* town = (char*) malloc(sizeof(char));
    int people = 0;
    while(f!=0) {
        printf("Menu:\n1 add\n2 delete\n3 list\n");
        scanf("%d",&f);
        switch (f) {
            case 1:
                printf("Put town:\n");
                scanf("%s", town);
                printf("Put people:\n");
                scanf("%d", &people);
                if(install(town, people))
                    printf("success\n");
                else
                    printf("error\n");
                break;
            case 2:
                printf("Put town:\n");
                scanf("%s", town);
                if(delete(town))
                    printf("success\n");
                else
                    printf("error\n");
                break;
            case 3:
                plist();
                break;

        }
    }
    printf("Hello World");

    return 0;
}
int delete(char* name){
    unsigned hashval = hash(name);
    struct nlist* p = hashtab[hashval];
    printf("d");
    struct nlist* prev = NULL;
    while(p!=NULL){
        printf("e");
        if(strcmp(p->town, name) == 0){
            printf("l");
            if(p != hashtab[hashval]) {
                printf("t");
                prev->next = p->next;
                //free(p);
                return 1;
            }
            else {
                hashtab[hashval]->next = p->next;
                //free(p);
                return 1;
            }
        }
        prev = p;
        p = p->next;
    }
    return 0;
}
void plist(){
    for(int i = 0; i<HASHSIZE; i++){
        struct nlist* tp;
        for(tp = hashtab[i]; tp!=NULL; tp = tp->next){
            printf("%s;%d\n", tp->town, tp->people);
        }
    }
}

struct nlist* lookup(char* s){
    struct nlist* np;
    for(np = hashtab[hash(s)]; np!=NULL; np = np->next)
        if(strcmp(s, np->town) == 0)
            return np;
    return NULL;
}
struct nlist* install(char* name, int value){
    struct nlist* np;
    unsigned hashval;
    if ((np = lookup(name)) == NULL){
        np = (struct nlist*) malloc(sizeof(struct nlist));
        if(np == NULL || (np->town = _strdup(name)) == NULL)
            return NULL;
        np->people = value;
        hashval = hash(name);
        np->next = hashtab[hashval];
        hashtab[hashval] = np;
    } else
        free((void*) np->town);
    if((np->town = _strdup(name)) == NULL)
        return NULL;
    return np;
}
unsigned hash(char* s){
    unsigned hashval;
    for(hashval = 0; *s!='\0'; s++)
        hashval = *s + 17 * hashval;
    return hashval % HASHSIZE;
}
